generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id        String   @id @default(uuid())
  userName  String   @unique
  email     String   @unique
  password  String
  articles  Article[]
}

model Article {
  id        String   @id @default(uuid())
  title     String
  authorId  String
  content   String
  date      DateTime @default(now())
  user      User     @relation(fields: [authorId], references: [id], onDelete: Cascade)
}