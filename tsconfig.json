{
  "compilerOptions": {
    "target": "ES2017",
    "lib": [
      "dom",
      "dom.iterable",
      "esnext"
    ],
    "allowJs": true,
    "skipLibCheck": true,
    "strict": true,
    "noEmit": true,
    "esModuleInterop": true,
    "module": "esnext",
  "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "react-jsx",
    "incremental": true,
    "allowImportingTsExtensions": true,
    "plugins": [
      {
        "name": "next"
      }
    ],
    "paths": {
      "@/*": [
        "./src/*"
      ],
      "@app/*": ["./Application/*"],
      "@domain/*": ["./Domain/*"],
      "@infra/*": ["./Infrastructure/*"],
      "@webapi/*": ["./WebApi/*"],
      "@prisma/*": ["./prisma/*"],
      "@root/*": ["./*"]
    }
  },
  "include": [
    "next-env.d.ts",
    "global.d.ts",
    "src/**/*",
    "Application/**/*",
    "Domain/**/*",
    "Infrastructure/**/*",
    "WebApi/**/*",
    "prisma/**/*",
    ".next/types/**/*.ts",
    ".next/dev/types/**/*.ts",
    "**/*.mts",
    ".next\\dev/types/**/*.ts",
    ".next\\dev/types/**/*.ts"
  ],
  "exclude": [
    "node_modules"
  ]
}
