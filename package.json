{
  "name": "advanced-blog",
  "version": "0.1.0",
  "private": true,
  "type": "module",
  "scripts": {
    "serve": "tsx WebApi/server.ts",
    "build": "next build --turbopack",
    "start": "next start",
    "test": "npm run test:front && npm run test:back",
    "test:front": "jest --config=tests/jest.front.cjs",
    "test:front:watch": "jest --config=tests/jest.front.cjs --watchAll",
    "test:back": "npm run test:ci:db:start && npm run db:test:reset && jest --config=tests/jest.back.cjs --runInBand && npm run test:ci:db:stop",
    "test:back:watch": "npm run test:ci:db:start && cross-env DOTENV_CONFIG_PATH=.env.test jest --config=tests/jest.back.cjs --watchAll",
    "db:test:reset": "cross-env DOTENV_CONFIG_PATH=.env.test npx prisma migrate reset --force --skip-seed --schema=prisma/schema.prisma",
    "test:ci:db:start": "docker compose -f docker-compose.test.yml up -d",
    "test:ci:db:stop": "docker compose -f docker-compose.test.yml down -v",
    "lint": "eslint"
  },
  "dependencies": {
    "@prisma/client": "^6.18.0",
    "@testing-library/user-event": "^14.6.1",
    "@types/cors": "^2.8.19",
    "axios": "^1.13.0",
    "bcryptjs": "^3.0.2",
    "cloudinary": "^2.8.0",
    "cors": "^2.8.5",
    "dotenv": "^17.2.3",
    "express": "^5.1.0",
    "jsonwebtoken": "^9.0.2",
    "multer": "^2.0.2",
    "next": "16.0.0",
    "react": "19.2.0",
    "react-dom": "19.2.0",
    "zustand": "^5.0.8"
  },
  "devDependencies": {
    "@tailwindcss/postcss": "^4",
    "@testing-library/jest-dom": "^6.9.1",
    "@testing-library/react": "^16.3.0",
    "@types/express": "^5.0.5",
    "@types/jest": "^30.0.0",
    "@types/jsonwebtoken": "^9.0.10",
    "@types/multer": "^2.0.0",
    "@types/node": "^20",
    "@types/react": "^19",
    "@types/react-dom": "^19",
    "@types/supertest": "^6.0.3",
    "concurrently": "^8.2.2",
    "cross-env": "^10.1.0",
    "eslint": "^9",
    "eslint-config-next": "16.0.0",
    "jest": "^30.2.0",
    "jest-environment-jsdom": "^30.2.0",
    "prisma": "^6.18.0",
    "supertest": "^7.1.4",
    "tailwindcss": "^4",
    "ts-jest": "^29.4.5",
    "tsx": "^4.20.6",
    "typescript": "^5"
  }
}
